<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alerts</title>
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>

    </style>
</head>

<body>
    <nav class="px-3 navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">MT Bot</a>
        </div>
    </nav>
    <div class="container">

        <h2 class="py-3 text-center text-info">Alerts History of last 1000 by descending order of creation time</h2>
    </div>
    <div class="container">
        <table class="table table-striped table-hover">
            <tr class="table-dark">
                <th>ID</th>
                <th>Text</th>
                <th>Created</th>
            </tr>
            <% data.forEach(function(alert){ %>
                <tr>
                    <td>
                        <%=alert.id%>
                    </td>
                    <td><span class="text">
                            <%=alert.text%>
                        </span></td>
                    <td>
                        <%=alert.created %>
                    </td>
                </tr>
                <% }); %>

        </table>

    </div>
</body>

</html>