<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        .nav-actions {
            gap: 0.5rem;
        }
    </style>
</head>

<body class="bg-light">
    <!-- Navbar -->
    <%- include("partials/nav", { title: "Dashboard" }) %>
        <!-- Main Content -->
        <main class="container mt-4">
            <div class="row g-4"> 
                <!-- Total Users Card -->
                <div class="col-md-6">
                    <a href="/users" class="text-decoration-none">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Total Users</h5>
                                <p class="display-6 fw-bold">
                                <p class="display-6 fw-bold">
                                    <%= userList.length %>
                                </p>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="/add_user" class="text-decoration-none">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Add new User And API Key</h5>
                                <p class="display-6 fw-bold">
                                <p class="display-6 fw-bold">
                                    <i class="fa fa-user-plus" aria-hidden="true"></i>
                                </p>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <!-- Expired API Keys Card -->
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Active API Keys</h5>
                            <p class="display-6 fw-bold text-success">
                                <%= userList.length - expiredKeys.length %>
                            </p>
                        </div>
                    </div>
                </div>
                <!-- Expired API Keys Card -->
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Expired API Keys</h5>
                            <p class="display-6 fw-bold text-danger">
                                <%= expiredKeys.length %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!-- Footer -->
        <footer class="bg-white text-center text-muted py-3 shadow-sm mt-auto">
            Â© 2025 YourCompany. All rights reserved.
        </footer>
        <script src="https://kit.fontawesome.com/94984392ba.js" crossorigin="anonymous"></script>
</body>

</html>